<!-- Declare the page and specify its purpose -->

<!-- Define the model for the page -->
@model IndexModel
<!-- Set the title for the page -->
@{
    ViewData["Title"] = "Home page";
}

<!-- Start of the HTML content -->
<div class="text-center">
    <!-- Display an image -->
    <img src="A&M.png">
    <!-- Display a heading -->
    <h1 class="display-4">ciao</h1>
    <!-- Display a paragraph with a hyperlink -->
    <p>If you are bored check out <a href="https://pointerpointer.com/">this website</a>.</p>
    <!-- Display a paragraph -->
    <p>❤️ <strong>Otherwise keep logging in </strong>❤️</p>

    <!-- Start of a button group -->
    <div class="btn-group" role="group" aria-label="Basic example">

        <!-- Button with a hyperlink -->
        <button class="linketto btn btn-primary">
            <a href="/Titoli">titoli di studio </a></strong>
            <!-- Display an SVG icon -->
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-bar-chart-fill" viewBox="0 0 16 16">
                <path d="M1 11a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1v-3zm5-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v7a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7zm5-5a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1V2z" />
            </svg>
        </button>

        <!-- Button with a hyperlink -->
        <button class="linketto btn btn-primary"><a href="/Sedi">sedi delle aziende</a></button>

    </div>

    <!-- Start of a form -->
    <form id="myForm" method="post" asp-page="Index">

        <!-- Start of a table -->
        <table class="table">
            <!-- Start of a table row -->
            <tr>
                <!-- Start of a table cell with a label -->
                <td class="testo" required style="font-size: 30px;">Inserisci le tue credenziali
                    <!-- Display an SVG icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" width="30px" height="30px" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                        <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                    </svg>
                </td>
            </tr>
            <!-- Start of a table row -->
            <tr>
                <!-- Start of a table cell with an input field -->
                <td>
                    <input type="text" placeholder="username" name="username" required style="font-size: 40px;">
                </td>
            </tr>
            <!-- Start of a table row -->
            <tr>
                <!-- Start of a table cell with an input field -->
                <td>
                    <input type="password" placeholder="*******" name="password" required style="font-size: 40px;">
                </td>
            </tr>
        </table>

        <!-- Button to submit the form -->
        <button type="submit" class="btn btn-primary custom-button">Login
            <!-- Display an SVG icon -->
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-door-open" viewBox="0 0 16 16">
                <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z" />
                <path d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117zM11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5zM4 1.934V15h6V1.077l-6 .857z" />
            </svg>
        </button>
    </form>

    <!-- JavaScript code to handle form submission -->
    <script>
        var form = document.getElementById("myForm");
        form.addEventListener("submit", function (event) {
            var username = document.getElementsByName("username")[0].value;
            var password = document.getElementsByName("password")[0].value;

            // Perform your validation logic here
            if (username !== "username" && password !== "password") {
                event.preventDefault(); // Prevent the form from being submitted
                alert("Invalid username or password. Please try again.");
            } else {
                RedirectToPage(); // Assuming RedirectToPage() is a function defined elsewhere
            }
        };
    </script>
</div>

<!-- Include scripts required for client-side validation -->
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
